<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         colors="true"
>
    <testsuites>
        <testsuite name="Unit">
            <directory>tests/Unit</directory>
        </testsuite>
        <testsuite name="Feature">
            <directory>tests/Feature</directory>
        </testsuite>
    </testsuites>
    <source>
        <include>
            <directory>app</directory>
        </include>
    </source>
    <php>
        <!-- Application Environment -->
        <env name="APP_ENV" value="testing"/>
        <env name="APP_MAINTENANCE_DRIVER" value="file"/>
        <env name="BCRYPT_ROUNDS" value="4"/>
        
        <!-- Broadcasting & Mail -->
        <env name="BROADCAST_CONNECTION" value="null"/>
        <env name="MAIL_MAILER" value="array"/>
        
        <!-- Cache & Session Configuration for Testing -->
        <env name="CACHE_DRIVER" value="array"/>
        <env name="CACHE_STORE" value="array"/>
        <env name="SESSION_DRIVER" value="array"/>
        
        <!-- Queue Configuration -->
        <env name="QUEUE_CONNECTION" value="sync"/>
        
        <!-- Database Configuration for MySQL -->
        <!-- Using mysql as DB_HOST because that's the service name in docker-compose.yml -->
        <!-- For local testing: Use actual values from docker-compose.yml -->
        <!-- For CI/CD: GitHub Actions will replace these with secrets -->
        <env name="DB_CONNECTION" value="mysql"/>
        <env name="DB_HOST" value="mysql"/>
        <env name="DB_PORT" value="3306"/>
        <env name="DB_DATABASE" value="notes_db"/>
        <env name="DB_USERNAME" value="laravel_user"/>
        <env name="DB_PASSWORD" value="password"/>
        
        <!-- Feature Flags -->
        <env name="PULSE_ENABLED" value="false"/>
        <env name="TELESCOPE_ENABLED" value="false"/>
        <env name="NIGHTWATCH_ENABLED" value="false"/>
    </php>
</phpunit>
